<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="game-background" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.uno.controller.GameController">
    <top>
        <HBox alignment="CENTER" spacing="20.0" styleClass="info-panel" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="title-label" text="UNO" />
                <Label fx:id="statusLabel" styleClass="status-label" text="Turno del jugador" />
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="unoButton" mnemonicParsing="false" onAction="#handleUnoButtonAction" styleClass="uno-button" text="Â¡UNO!" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <HBox fx:id="computerHandArea" alignment="CENTER" spacing="5.0" styleClass="computer-hand">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0" styleClass="table-area">
                    <children>
                        <StackPane styleClass="deck-area">
                            <children>
                                <ImageView fx:id="deckImageView" fitHeight="130.0" fitWidth="90.0" onMouseClicked="#handleDeckClick" pickOnBounds="true" preserveRatio="true" />
                            </children>
                        </StackPane>
                        <StackPane styleClass="discard-area">
                            <children>
                                <ImageView fx:id="topCardImageView" fitHeight="130.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
                            </children>
                        </StackPane>
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Color actual:" textFill="WHITE" />
                                <Rectangle fx:id="currentColorIndicator" height="40.0" styleClass="color-indicator" width="40.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox fx:id="playerHandArea" alignment="CENTER" spacing="5.0" styleClass="player-hand">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="control-panel" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="player-label" text="Jugador" />
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="messageLabel" styleClass="message-label" text="" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>